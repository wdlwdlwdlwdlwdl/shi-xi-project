<process name="flowCartExt/cartCalcPrice" alias="购物车价格计算">

    <start name="start" alias="流程开始">
        <paths>
            <path to="argumentCheck"/>
        </paths>
    </start>

    <state name="argumentCheck" alias="基本入参检查">
        <invokes>
            <node id="argumentCheckHandler"/>
        </invokes>
        <paths>
            <path to="bizProcess"/>
        </paths>
    </state>

    <state name="bizProcess" alias="业务流程">
        <invokes>
            <!-- 购物车主表查询 -->
            <node id="calcQueryHandlerCenter"/>
            <!-- 分组处理 商品信息补全 -->
            <node id="calcFillupHandler"/>
            <!-- 营销计算补全 -->
            <node id="calcFillPromotionsHandler"/>
            <!-- 结果模型转换 -->
            <node id="calcResultHandler"/>
        </invokes>
        <paths>
            <path to="end" />
        </paths>
    </state>

    <state name="end" alias="流程结束"/>
</process>
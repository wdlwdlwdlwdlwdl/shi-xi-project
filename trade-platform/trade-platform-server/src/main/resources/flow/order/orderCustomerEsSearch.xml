<process name="flow/order/orderCustomerEsSearch" alias="已买到订单列表搜索">
    <start name="start" alias="已买到订单列表搜索start">
        <paths>
            <path to="customerOrderSearchParam"/>
        </paths>
    </start>
    <state name="customerOrderSearchParam" alias="准备搜索参数">
        <invokes>
            <node id="customerOrderEsSearchParamHandler" in="customerOrderQueryRpcReq" return="searchRequest"/>
        </invokes>
        <paths>
            <path to="orderSearch"/>
        </paths>
    </state>
    <state name="orderSearch" alias="发起搜索">
        <invokes>
            <node id="orderEsSearchHandler" in="searchRequest" return="listOrder"/>
        </invokes>
        <paths>
            <path to="customerOrderSearchResult"/>
        </paths>
    </state>

    <state name="customerOrderSearchResult" alias="处理搜索结果">
        <invokes>
            <node id="customerOrderSearchResultHandler" in="listOrder" return="pageInfo" />
        </invokes>
        <paths>
            <path to="end"/>
        </paths>
    </state>
    <state name="end" alias="已买到订单列表搜索end"/>
</process>
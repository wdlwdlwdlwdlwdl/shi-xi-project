<process name="flow/cart/cartClear" alias="清空购物车">

    <start name="start" alias="流程开始">
        <paths>
            <path to="argumentCheck"/>
        </paths>
    </start>

    <state name="argumentCheck" alias="基本入参检查">
        <invokes>
            <node id="argumentCheckHandler"/>
        </invokes>
        <paths>
            <path to="bizProcess"/>
        </paths>
    </state>

    <state name="bizProcess" alias="业务流程">
        <invokes>
            <!-- 删除主表数据 -->
            <node id="clearCartHandler"/>
        </invokes>
        <paths>
            <path to="end" />
        </paths>
    </state>

    <state name="end" alias="流程结束"/>
</process>